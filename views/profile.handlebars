{{!-- This container will render the userName of whoever logs into their profile for Haze --}}
<div class="container border">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-5 text-center">
      Hello, {{userName}}

    </div>
  </div>
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-5 text-center">
      Welcome to the Haze community
    </div>
  </div>
</div>

<div class="container border mt-4">
  {{!-- The card container for each of the users post --}}
  {{#each post}}
  <div class="col-6">
    <div class="card mb-3 mt-4">
      <div class="card-body">
        <h5 class="card-title">{{subject}}</h5>
        <p class="card-text">{{description}}</p>
        <p class="card-text"><small class="text-body-secondary">{{format_date date_created}}</small></p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
